@{
    Layout = null;
}
@model FCmsManager.ViewModel.FilterValueViewModel

<div class="cmsfiltervalue" data-index="@Model.Index">
    <input type="hidden" name="filterid@(Model.Index)" value="@Model.FilterDefinition.Id" />
    <input type="hidden" name="filtertype@(Model.Index)" value="@Model.FilterDefinition.Type" />
    <b>@Model.FilterDefinition.Name</b>
    <input type="text" name="filtervalue@(Model.Index)" class="form-control" placeholder="YYYY-MM-DD (@Model.FilterDefinition.Name Start date)" value="@Model.ContentFilter.GetValue(0)" />
    <input type="text" name="filtervalue@(Model.Index)" class="form-control" placeholder="YYYY-MM-DD (@Model.FilterDefinition.Name End date)" value="@Model.ContentFilter.GetValue(1)" />
</div>
